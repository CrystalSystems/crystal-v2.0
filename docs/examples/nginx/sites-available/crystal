server {
	server_name test-37773.ru www.test-37773.ru;

    # Limit the maximum size of files that can be uploaded via POST requests

	client_max_body_size 3M;

# /Limit the maximum size of files that can be uploaded via POST requests


# Frontend

	location /
	{
		root /var/www/crystal/frontend/dist;
		try_files $uri $uri /index.html;
	}

# /Frontend

# Backend API

	location /api/
	{
		proxy_pass http://127.0.0.1:3000/;
		proxy_hide_header X-Powered-By;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection 'upgrade';
		proxy_set_header Host $host;
		proxy_cache_bypass $http_upgrade;
	}

# /Backend API

# WebSocket 

  location /ws {
    proxy_pass http://127.0.0.1:3000;
    proxy_http_version 1.1;
    
    # Protocol switching (Upgrade)
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    
    # Headings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    
    # Timeout to prevent the connection from dropping too quickly (optional)
    proxy_read_timeout 60s;
  }

# /WebSocket

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/test-37773.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/test-37773.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}server {
    if ($host = www.test-37773.ru) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = test-37773.ru) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80;
	listen [::]:80;
	server_name test-37773.ru www.test-37773.ru;
    return 404; # managed by Certbot

}